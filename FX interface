package helloworld;

import javafx.application.Application;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.scene.input.MouseEvent;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.StackPane;
import javafx.stage.Stage;
import javafx.scene.layout.GridPane;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.ColumnConstraints;
import javafx.scene.layout.RowConstraints;
import javafx.geometry.Pos;
import javafx.geometry.HPos;
import javafx.geometry.VPos;
import javafx.scene.control.MenuBar;
import javafx.scene.control.Menu;
import javafx.scene.layout.VBox;
import javafx.scene.control.Alert;
import javafx.scene.control.Alert.AlertType;
import javafx.stage.Popup;
/**
 *
 * @author liull
 */
public class HelloWorld extends Application {
    
    

    
    @Override
    public void start(final Stage primaryStage) {
        GridPane gridpane = new GridPane();

        Label label5 = new Label("HELP");
         final Popup popup = new Popup(); popup.setX(300); popup.setY(200);
    popup.getContent().addAll(label5);
        
        Label label1 = new Label("Name:");
         GridPane.setRowIndex(label1, 1);
     GridPane.setColumnIndex(label1, 1);
        
                Label label2 = new Label("Phone Number:");
         GridPane.setRowIndex(label2, 2);
     GridPane.setColumnIndex(label2, 1);
     
             Label label3 = new Label("Email Address:");
         GridPane.setRowIndex(label3, 3);
     GridPane.setColumnIndex(label3, 1);
     
             Label label4 = new Label("Street Address:");
         GridPane.setRowIndex(label4, 4);
     GridPane.setColumnIndex(label4, 1);
     

        
        TextField text1 = new TextField ();
        GridPane.setConstraints(text1, 2, 1);
        
        TextField text2 = new TextField ();
        GridPane.setConstraints(text2, 2, 2);
        
        TextField text3 = new TextField ();
        GridPane.setConstraints(text3, 2, 3);
        
        TextField text4 = new TextField ();
        GridPane.setConstraints(text4, 2, 4);
        
          gridpane.getChildren().addAll(label1, label2, label3, label4, text1, text2, text3, text4);
        
   ColumnConstraints column1 = new ColumnConstraints();
column1.setHalignment(HPos.LEFT);
gridpane.getColumnConstraints().add(column1); 

 final Menu menu1 = new Menu("File");
 final Menu menu2 = new Menu("Options");
 final Menu menu3 = new Menu("Help");
 
 MenuBar menuBar = new MenuBar();
 menuBar.getMenus().addAll(menu1, menu2, menu3);

 
 
         menu3.setOnAction(new EventHandler<ActionEvent>() {
            @Override public void handle(ActionEvent event) {
                 popup.show(primaryStage);
            }
        });

     
                
 

 
 
    
 
 
     VBox vbox = new VBox(8); // spacing = 8
     vbox.getChildren().addAll(menuBar, gridpane);
 
        StackPane root = new StackPane();
        root.getChildren().addAll(vbox);
        
        Scene scene = new Scene(root, 600, 500);
        
        primaryStage.setTitle("Contact Manager");
        primaryStage.setScene(scene);
        primaryStage.show();
    }

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        launch(args);
    }
    
}
